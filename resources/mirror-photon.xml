        <p2.mirror source="http://download.eclipse.org/releases/photon/">
            <destination location="file:/c:/tmp/eclipse/repo_photon"/>
            <iu id="org.eclipse.equinox.executable.feature.group" version="3.8.0.v20180518-2029"/>
